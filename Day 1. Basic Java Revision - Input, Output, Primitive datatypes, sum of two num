import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        System.out.println("Hello world!");

        System.out.print("Please enter some inputs: ");
        Scanner input = new Scanner(System.in);

        int a = input.nextInt();
        System.out.println(a);

//        String demo = input.next();
//        System.out.println(demo);

        String demo1 = input.nextLine();
        System.out.println(demo1);

        float num = input.nextFloat();
        System.out.println(num);

        double number = input.nextDouble();
        System.out.println(number);

        char character = input.next().charAt(0);
        System.out.println(character);

        long longNumber = input.nextLong();
        System.out.println(longNumber);

        boolean booleanValue = input.nextBoolean();
        System.out.println(booleanValue);

        //if we want to write numbers like 234,000,000 we can replace , by _
        int b = 234_000_000;
        System.out.println(b);
    }
}

